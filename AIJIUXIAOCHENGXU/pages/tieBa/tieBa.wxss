.newList{padding:0 26rpx;margin-top: 30rpx;}
.list_box{
      background: #641418;
      border-radius:10rpx;
      border: 2rpx solid #f5c697;
      padding:4rpx;
      float: left;
      width:320rpx;
      margin:11rpx 9rpx;
    }
.list_box .list_img{
      width: 320rpx;
      height: 290rpx;
      border-top-left-radius:15rpx;
      border-top-right-radius:15rpx;
      display: block;
    }
.list_box_txt{
      background: #842b2e;
      font-size: 28rpx;
      color: #f4d2ac;
      padding:5% 3% 0;
      letter-spacing:2rpx;
      text-overflow: -o-ellipsis-lastline;
      overflow: hidden;
      text-overflow: ellipsis;
      display: -webkit-box;
      -webkit-line-clamp: 2;
      line-clamp: 2;
      -webkit-box-orient: vertical;
    }
.list_box_name{font-size: 26rpx;padding:10% 5% 5%;background: #842b2e;}
.list_box_name image{width: 50rpx;height: 50rpx;vertical-align: middle;margin-top:-10rpx;margin-right:10rpx;}




