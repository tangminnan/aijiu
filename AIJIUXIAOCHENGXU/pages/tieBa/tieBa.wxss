.aicaoBG{width: 750rpx;height: 75rpx;position: fixed;top:0;left: 0;z-index: 99;}

.DDtxt{margin:45rpx 30rpx 0;padding:15rpx;background: #842b2e;border:2rpx solid #e0bf8f;border-radius:20rpx;overflow: hidden;}
.DDtxt .txt{margin-bottom: 30rpx;overflow: hidden;}
.DDtxt .txt image{float: left;width:80rpx;height:80rpx;}
.DDtxt .txt .wenzi{float: left;margin-left: 30rpx;}
.DDtxt .txt .wenzi .tt1{display: block;margin-bottom:10rpx;}
.DDtxt .txt .wenzi .tt2{display: block;font-size: 24rpx;color: #d5c2a9;}
.DDtxt .DDcon2 image{float: left;width: 205rpx;height: 205rpx;border: 1px solid #fff;margin:30rpx 5rpx;} 
.DDtxt .DDcon3{font-size: 24rpx;}
.DDtxt .DDcon3 image{width: 35rpx;height:35rpx;vertical-align: middle;margin:0 12rpx;margin-top:-10rpx;}
.DDtxt .DDcon3 text{margin-right:15rpx;}

.TB_huatiBTop{width: 750rpx;height: 90rpx;position: fixed;top:0;left: 0;z-index: 99;}
.TJtxtTop{position: relative;width: 750rpx;height:615rpx;}
.huatiBbj{width: 750rpx;height: 615rpx;position: absolute;left: 0;top:0;}
.huati_box{width: 100%;position: absolute;left: 0;bottom: 100rpx;padding:0 15rpx;}
.HT_txt{float: left;width:200rpx;height:287rpx;margin:0 20rpx;position:relative;}
.HT_txt .HT_txt_bg{width: 200rpx;height: 287rpx;position: absolute;left: 0;bottom:0;}
.HT_txt .wenzi{position: absolute;left: 0;bottom:0;text-align: center;width:199rpx;height:287rpx;}
