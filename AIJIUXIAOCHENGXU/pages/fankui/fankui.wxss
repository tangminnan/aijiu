.tijiao{
  margin:30rpx;
}
.tijiao textarea{
  width: 100%;
  height: 500rpx;
  background: #842b2e;
  padding:18rpx;
  display: block;
  border: 1rpx solid #f6c885;
  margin-bottom: 50rpx;
  box-sizing: border-box;
}

.tijiao button{
  display: block;
  margin-top:0 auto;
  width: 80% !important;
  background: #2b6162;
  font-size: 36rpx;
  color: #f4cb99;
  font-weight: normal;
  letter-spacing: 2rpx;
  border:1rpx solid #e1b37c;
}


















