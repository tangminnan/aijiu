/* pages/wodeSC/wodeSC.wxss */
.SC_list{margin: 30rpx;}
.SC_list .SC_box{
  float: left;
  width: 48%;
  margin: 1%;
  border: 2rpx solid #efb982;
  border-radius: 15rpx;
  padding: 4rpx;
  box-sizing: border-box;
}
.SC_box .SC_box_img{
  width: 100%;
  height: 290rpx;
  border-top-right-radius: 15rpx;
  border-top-left-radius: 15rpx;
  display: block;
}
.SC_TXT{
  background: #842b2e;
  padding: 20rpx 10rpx;
  font-size: 28rpx;
  overflow: hidden;
  border-bottom-right-radius: 15rpx;
  border-bottom-left-radius: 15rpx;
}
.SC_yh{margin-top: 20rpx;}
.SC_yh .fl image{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  vertical-align: middle;
  margin-right: 5rpx;
}
.SC_aixin{
  width: 40rpx;
  height: 36rpx;
  margin-top: 15rpx;
}














