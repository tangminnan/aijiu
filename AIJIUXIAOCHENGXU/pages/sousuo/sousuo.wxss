/* pages/sousuo/sousuo.wxss */
.weui-search-bar {
  position: relative;
  margin: 40rpx 70rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  box-sizing: border-box;
  border: 1rpx solid #e5b870;
  border-radius:50rpx;
  overflow: hidden;
}
.weui-icon-search_in-box {
  position: absolute;
  left: 20rpx;
  top: 20rpx;
}
.weui-search-bar__form {
  position: relative;
  -webkit-box-flex: 1;
  -webkit-flex: auto;
          flex: auto;
  border-radius: 5px;
}
.weui-search-bar__box {
  position: relative;
  padding-left: 80rpx;
  width: 100%;
  box-sizing: border-box;
  z-index: 1;
}
.weui-search-bar__input {
  height: 80rpx;
  line-height: 80rpx;
}
.weui-search-bar__cancel-btn {
  width: 134rpx;
  line-height: 80rpx;
  color: #f6deaf;
  white-space: nowrap;
  background: #2b6162;
  text-align: center;
}
.sousuo_List{margin:0 30rpx; text-align: center;}
.sousuo_List .box{
  width: 48%;
  position: relative;
  float: left;
  margin: 1%;
}
.box .box_bg{
  width: 300rpx;
  height: 330rpx;
}
.box .box_txt{
  font-size: 34rpx;
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
}
.box .box_txt image{
  width: 245rpx;
  height: 200rpx;
  display: block;
  margin: 20rpx auto;
  border-top-right-radius: 15rpx;
  border-top-left-radius: 15rpx;
}



