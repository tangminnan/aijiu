.tijiao{
  margin:30rpx;
}
.jilu{
  background: #18595a;
  border:2rpx solid #f6c786;
  border-radius:15rpx;
  padding:4rpx;
  float: right;
  margin-bottom: 30rpx;
}
.jilu_btn{
  background: #2d6c6d;
  color:#fbd39f;
  font-size: 30rpx;
  width: 220rpx;
  height: 64rpx;
  line-height: 64rpx;
  text-align: center;
  border-radius:15rpx;
}
.jilu_btn .heng, .jilu_btn .heng::before, .jilu_btn .heng::after{
  width: 26rpx;
  height: 3rpx;
  background: #eac493;
  display: inline-block;
  position: relative;
  margin-right: 15rpx;
}
.jilu_btn .heng::before, .jilu_btn .heng::after{
  content: "";
  position:absolute;
  left:0;top:-10rpx;
}
.jilu_btn .heng::after{
  top:-20rpx;
}
.tijiao textarea{
  width: 100%;
  height: 500rpx;
  background: #842b2e;
  padding:18rpx;
  display: block;
  border: 1rpx solid #f6c885;
  margin-bottom: 50rpx;
  box-sizing: border-box;
}

.tijiao button{
  display: block;
  margin-top:0 auto;
  width: 80% !important;
  background: #2b6162;
  font-size: 36rpx;
  color: #f4cb99;
  font-weight: normal;
  letter-spacing: 2rpx;
  border:1rpx solid #e1b37c;
}


















