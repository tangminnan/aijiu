<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.aijiu.information.dao.MyShoucangDao">

	<select id="get" resultType="com.aijiu.information.domain.MyShoucangDO">
		select `id`,`leave_id`,user_name,text,`user_id`,`create_time`,`delete_flag` from t_my_shoucang where id = #{value}
	</select>

	<select id="list" resultType="com.aijiu.information.domain.MyShoucangDO">
		select `id`,`leave_id`,user_name,text,`user_id`,`create_time`,`delete_flag` from t_my_shoucang
        <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="leaveId != null and leaveId != ''"> and leave_id = #{leaveId} </if>
			      <if test="userName != null and userName != ''"> and user_name = #{userName} </if>
		  		  <if test="createTime != null and createTime != ''"> and create_time = #{createTime} </if>
		  		  <if test="deleteFlag != null and deleteFlag != ''"> and delete_flag = #{deleteFlag} </if>
		  		</where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="count" resultType="int">
		select count(*) from t_my_shoucang
		 <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="leaveId != null and leaveId != ''"> and leave_id = #{leaveId} </if>
		  		  <if test="userId != null and userId != ''"> and user_id = #{userId} </if>
		  		  <if test="createTime != null and createTime != ''"> and create_time = #{createTime} </if>
		  		  <if test="deleteFlag != null and deleteFlag != ''"> and delete_flag = #{deleteFlag} </if>
		  		</where>
	</select>
	 
	<insert id="save" parameterType="com.aijiu.information.domain.MyShoucangDO" useGeneratedKeys="true" keyProperty="id">
		insert into t_my_shoucang
		(
			`leave_id`, 
			`user_id`, 
			`create_time`, 
			`delete_flag`
		)
		values
		(
			#{leaveId}, 
			#{userId}, 
			#{createTime}, 
			#{deleteFlag}
		)
	</insert>
	 
	<update id="update" parameterType="com.aijiu.information.domain.MyShoucangDO">
		update t_my_shoucang 
		<set>
			<if test="leaveId != null">`leave_id` = #{leaveId}, </if>
			<if test="userId != null">`user_id` = #{userId}, </if>
			<if test="createTime != null">`create_time` = #{createTime}, </if>
			<if test="deleteFlag != null">`delete_flag` = #{deleteFlag}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="remove">
		delete from t_my_shoucang where id = #{value}
	</delete>
	
	<delete id="batchRemove">
		delete from t_my_shoucang where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>